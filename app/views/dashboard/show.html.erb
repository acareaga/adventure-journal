<div class="container">
    <% if current_user %>

      <br>
      <br>
      <div class="row">
        <div class="col s4 offset-m1"><%= image_tag current_user.profile_picture %></div>
        <div class="col s7">
          <h3> <%= current_user.username %> </h3>
          <p> <%= current_user.name %> - <%= current_user.bio %></p>
          <a href='<%= current_user.website%>' target="_blank"><%= current_user.website %> </a>
        </div>
      </div>

      <br>
      <br>
      <br>

          <div class="row">
          <% @user_posts.each do |post| %>
            <div class="col s4">
              <div class="card">
                <div class="card-image waves-effect waves-block waves-light">
                  <img class="activator" id="dashboard-user-photos" src="<%= post.images.low_resolution.url %>" >
                </div>
                <div class="card-reveal">
                    <span class="card-title grey-text text-darken-4"><%= current_user.username%><i class="material-icons right">close</i></span>
                    <p>Favorites: <%= post.likes[:count] %></p>
                    <p><a href='<%= current_user.username%>'><%= current_user.username %> </a><%= post.caption[:text] %></p>
                    <p><%= post.comments %></p>
                    <br>
                  <a href='/media_like/<%= post.id %>'>Like</a>
                  <a href='/media_unlike/<%= post.id %>'>Unlike</a>
                </div>
              </div>
            </div>
          <% end %>
        </div>

    <% else %>
      <div class="col s12"><span class="flow-text"> Login to Start Your Adventure </span></div>
    <% end %>
</div>
