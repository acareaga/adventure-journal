<div class="container">
    <% if current_user %>

      <br>
      <br>
      <br>
      <div class="row">
        <div class="col s5 offset-s2"><%= image_tag current_user.profile_picture %></div>
        <div class="col s7">
          <h3> <%= current_user.username %> </h3>
          <p> <%= current_user.bio %></p>
          <a href='<%= current_user.website%>' target="_blank"><%= current_user.website %> </a>
        </div>
      </div>

      <br>
      <br>
      <br>

      <% @user_posts.each do |post| %>
        <div style='float:left;'>
          <%= image_tag post.images.thumbnail.url %>
        <br/>
        <a href='/media_like/<%= post.id %>'>Like</a> | <a href='/media_unlike/<%= post.id %>'>UnLike</a> | Likes: <%= post.likes[:count] %></div>
      <% end %>

    <% else %>
      <div class="col s12"><span class="flow-text"> Login to Adventure </span></div>
    <% end %>
</div>
